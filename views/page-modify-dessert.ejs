<%- include("partials/header") -%>

 <!-- Page Title #1
============================================= -->
<% var ADD = add %>
<% var DELETE = deletee %> 
        <section id="page-title" class="page-title bg-overlay bg-parallax bg-overlay-gradient">
            <div class="bg-section">
                <img src="images/page-title/6.jpg" alt="Background" />
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="title title-1 text-center">
                            <div class="title--content">
                                <div class="title--subtitle">Ready To Serve</div>
                                <div class="title--heading">
                                    <h1>Modify Dessert</h1>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <ol class="breadcrumb">
                                <li><a href="/">Home</a></li>
                                <li><a href="/page-admin">Admin</a></li>
                                <li class="active">Modify Dessert</li>
                            </ol>
                            <div class="divider--shape-1down"></div>
                        </div>
                        <!-- .title end -->
                    </div>
                    <!-- .col-md-12 end -->
                </div>
                <!-- .row end -->
            </div>
            <!-- .container end -->
        </section>
        <!-- #page-title end -->

        <section id="contact1" class="contact contact-1 " >
            <div class="container" >
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-container">
                            <div class="row">
                             <% if(ADD != 0){ %>     
                                <div class="col-xs-12 col-sm-12 col-md-6">
                                    <div class="contact-form">
                                        <form  action="/page-modify-dessert" method="post" >
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="iddessert" id="iddessert" placeholder="Dessert ID:" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="itemname" id="itemname" placeholder="Item Name:" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="amount" id="amount" placeholder="Amount:" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="details" id="details" placeholder="Details:" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="chefid" id="chefid" placeholder="Chef ID:" required>
                                                </div>
                                                <div class="col-md-12">
                                                    <button name="modifydessert" value="adddessert" type="submit" class="btn btn--secondary btn--block mt-10" >Add</button>
                                                </div> 
                                            </div>
                                        </form>
                                    </div>
                                </div>
                             <% } %>
                             <% if(DELETE != 0){ %>     
                                <div class="col-xs-12 col-sm-12 col-md-6">
                                    <div class="contact-form">
                                        <form  action="/page-modify-dessert" method="post" >
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="iddessert" id="iddessert" placeholder="Dessert ID:" required>
                                                </div>
                                                <div class="col-md-12">
                                                    <button name="modifydessert" value="deletedessert" type="submit" class="btn btn--secondary btn--block mt-10" >Delete</button>
                                                </div> 
                                            </div>
                                        </form>
                                    </div>
                                </div>
                             <% } %>            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

